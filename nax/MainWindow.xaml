<Window x:Class="nax.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nax"
        mc:Ignorable="d"
        Title="Шифратор сообщений" Height="450" Width="400"> 
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введите сообщение" />
            <TextBox x:Name="InputMessage" Height="30" Width="350" Margin="0,10,0,10" />
            <TextBlock Text="Введите ключ (целое число)" />
            <TextBox x:Name="Key" Height="30" Width="350" Margin="0,10,0,10" />
            <Button x:Name="EncryptButton" Content="Зашифровать" Height="30" Width="150" Click="EncryptButton_Click" Background="#FFF08181"/>
            <Button x:Name="DecryptButton" Content="Расшифровать" Height="30" Width="150" Click="DecryptButton_Click"/>
            <TextBox x:Name="ResultText" Height="30" Margin="0,10,0,10" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
